<main class="form-signin">
    <h2>Register</h2>
    <hr />
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        <%= f.label :email, class: "text-dark" %>
    </div>
    <div class="form-floating">
        <%= f.text_field :name, autofocus: true, autocomplete: "email", class:"form-control" %>
        <%= f.label :name, class: "text-dark" %>
    </div>
    <div class="form-floating">
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.label :password, class: "text-dark"  %>
    </div>
    <div class="form-floating">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        <%= f.label :password_confirmation, class: "text-dark" %>
    </div>
    <%= f.submit "Sign up" , class: "w-100 btn btn-lg btn-secondary" %>
    <% end %>
    <hr />
    <div class="auth-links">
        <%= render "devise/shared/links" %>
    </div>
</main>