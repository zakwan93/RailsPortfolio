<%= form_for(@project) do |form| %>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <%= form.text_field :title, class:"form-control" %>
            <%= form.label :title %>
        </div>

        <div class="form-group">
            <%= form.text_field :subtitle, class:"form-control" %>
            <%= form.label :subtitle %>
        </div>

        <div class="form-group mt-3">
            <label class="btn btn-primary">
                Upload a main image file <%= form.file_field :main_image, style: 'display:none;' %>
            </label>
        </div>

        <div class="form-group mt-3">
            <label class="btn btn-primary">
                Upload a thumb image file <%= form.file_field :thumb_image, style: 'display:none;' %>
            </label>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <%= form.text_area :body, class:"form-control", rows:13 %>
            <%= form.label :body %>
        </div>
    </div>
</div>

<hr />
<h3 class="pt-2 pb-2"> Technologies Used: </h3>
<ul class="form-group list-group">
    <%= form.fields_for :technologies do |technology_form| %>
    <li class="list-group-item">
        <%= technology_form.text_field :name, class:"form-control" %>
        <%= technology_form.label :name %>
    </li>
    <% end %>
</ul>
<div class="form-group pt-2">
    <%= form.submit "Save Project", class: "btn btn-secondary btn-block" %>
</div>
<% end %>