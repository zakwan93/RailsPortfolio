
<%= image_tag @project.main_image %>
<h1> <%= @project.title %> </h1>
<em> <%= @project.subtitle %> </em>
<p><%= @project.body %></p>

<h2> Technology Used </h2>

<%= @project.technologies.each do |t| %>
  <p> <%= t.name %> </p>
<% end %>

<%= link_to "Delete Project", project_path(@project), method: :delete, data: {confirm: "are you sure?"} %>