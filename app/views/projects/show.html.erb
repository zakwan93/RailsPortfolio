<div class="container p-4 vh-100 text-center px-3 d-flex mx-auto flex-column justify-content-center">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag project_img(@project.thumb_image, 'main'), width:"100%" %>
        </div>
        <div class="col-md-5">
            <h1> <%= @project.title %> </h1>
            <hr />
            <em> <%= @project.subtitle %> </em>
            <p><%= @project.body %></p>
            <hr />
            <h2> Technology Used </h2>
            <% @project.technologies.each do |t| %>
            <p> <%= t.name %> </p>
            <% end %>
            <%= link_to "Delete Project", project_path(@project), method: :delete, data: {confirm: "are you sure?"} if logged_in?(:site_admin) %>

        </div>
    </div>
</div>