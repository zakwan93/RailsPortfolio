<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="keyword" content=<%= @seo_keywords %> />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <title><%= @page_title %></title>
    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <%= render "shared/blog_nav" %>
    <%= render "shared/blog_masthead" %>
    <div class="container">
        <div class="row">
            <!-- start of container and row element -->
            <%= yield %>
            <%= render "shared/blog_sidebar" %>
            <%= render "shared/blog_footer" %>
            <%= render 'shared/alerts' %>
            <%= source_helper("blog") %>

        </div>
</body>

</html>